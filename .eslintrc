{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "standard": {
      "parser": "babel-eslint"
    }
  },
  "plugins": [
    "react",
    "import",
    "mocha",
    "jsx-a11y"
  ],
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true
  },
  "rules": {
    "max-params": ["error", 3],
    "no-confusing-arrow": 0,
    "arrow-body-style": 0,
    "react/prop-types": 2,
    "react/forbid-prop-types": 0,
    "react/prefer-stateless-function": 1,
    "jsx-a11y/no-static-element-interactions": 1,
    "linebreak-style": 0,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "mocha/no-exclusive-tests": "error"
  }
}
